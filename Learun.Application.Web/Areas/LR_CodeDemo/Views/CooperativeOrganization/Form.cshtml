@{
    ViewBag.Title = "合作机构";
    Layout = "~/Views/Shared/_Form.cshtml";
}
    <style>
        * {
            padding: 0;
            margin: 0
        }

        .box {
            width: 600px;
            margin: 0 auto;
            padding: 50px 5px 5px
        }

        .upload {
            text-align: center;
            background: #f2f2f2;
            position: relative
        }

            .upload:hover {
                background: #21292f;
                color: #fff
            }

            .upload input {
                opacity: 0;
                position: absolute;
                top: -1px;
                left: -1px;
                width: 100%
            }
    </style>
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" style="display:none">
        <div class="lr-form-item-title">id<font face="宋体"></font></div>
        <input id="id" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">创建日期</div>
        <input id="createDate" class="form-control" type="datetime" onfocus="WdatePicker()" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">修改日期</div>
        <input id="modifyDate" class="form-control" type="datetime" onfocus="WdatePicker()" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">机构名称<font face="宋体">*</font></div>
        <input id="name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">机构图片<font face="宋体">*</font></div>
        <div class="upload imgLog">
            <span>上传log</span>
        </div>
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">跳转路径<font face="宋体">*</font></div>
        <input id="htmlFilePath" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">状态<font face="宋体">*</font></div>
        <div class="checkbox">
            <label>
                <input id="state" type="checkbox" checked="checked" />
                启用
            </label>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/CooperativeOrganization/Form.js")
