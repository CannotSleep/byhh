@{
    ViewBag.Title = "文章信息";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-tabs" id="lr_form_tabs">
    <ul class="nav nav-tabs">
        <li><a data-value="tab1">信息参数</a></li>
        <li><a data-value="tab2">信息内容</a></li>
    </ul>
</div>
<div class="tab-content lr-tab-content" id="lr_tab_content">
<div class="lr-form-wrap tab-pane" id="tab1">
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">信息分类<font face="宋体">*</font></div>
        <div id="articleCategory_id" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">信息标题<font face="宋体">*</font></div>
        <input id="title" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">作者</div>
        <input id="author" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">详细描述</div>
        <textarea id="metaDescription" class="form-control" style="height:100px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">封面图片</div>
        <div id="imagePath"  ></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">创建日期</div>
        <input id="createDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#createDate').trigger('change'); } })"   />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">点击次数</div>
        <input id="hits" type="text" class="form-control" value="0"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">关键字</div>
        <textarea id="metaKeywords" class="form-control" style="height:100px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">是否置顶</div>
        <div id="isTop"></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">是否热点</div>
        <div id="isRecommend"></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">是否发布</div>
        <div id="isPublication"></div>
    </div>
</div>
<div class="lr-form-wrap tab-pane" id="tab2">
    <div class="col-xs-12 lr-form-item"  data-table="Article" >
        <div class="lr-form-item-title">内容</div>
        <div id="content" style="height:350px;"></div>
    </div>
</div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/Article/Form.js")
