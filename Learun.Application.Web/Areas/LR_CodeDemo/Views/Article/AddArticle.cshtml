
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>文章管理</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="icon" href="images/favicon.ico" type="image/ico" />
    <link href="~/Content/webuploader/webuploader.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/layui/layui/css/layui.css" media="all">

</head>
<body>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>文章添加</legend>
    </fieldset>
    <div class="content">
        <form class="layui-form" action="">

            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">搜索选择框</label>
                    <div class="layui-input-inline" id="articlecategory">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">文章题目</label>
                <div class="layui-input-inline">
                    <input type="text" id="title" name="title" lay-verify="title" autocomplete="off" placeholder="请输入标题" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">文章内容</label>
                <div class="layui-input-block">
                    <textarea id="demo" style="display: none;"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">文章附件</label>
                <div class="layui-input-block">
                    <div class="layui-upload">
                        <button type="button" class="layui-btn layui-btn-normal" id="testList">选择多文件</button>
                        <div class="layui-upload-list">
                            <table class="layui-table">
                                <thead>
                                    <tr>
                                        <th>文件名</th>
                                        <th>大小</th>
                                        <th>状态</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody id="demoList"></tbody>
                            </table>
                        </div>
                        <button type="button" class="layui-btn" id="testListAction">开始上传</button>
                    </div>                
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button type="button" class="layui-btn" id="uparticle">提交</button>
                </div>
            </div>
        </form>
    </div>
    <script src="~/Content/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Content/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/datepicker/WdatePicker.js"></script>
    <script src="~/Content/webuploader/webuploader.js"></script>

    <script src="~/Content/layui/layui/layui.js"></script>

    <script src="~/Scripts/messages_zh.js"></script>
    <script type="text/javascript">
        $.lrToken = $('@Html.AntiForgeryToken()').val();
    </script>

    @Html.AppendJsFile("/Areas/LR_CodeDemo/Views/Article/AddArticle.js")
</body>
</html>
